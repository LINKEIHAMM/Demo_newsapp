<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#8FBC8F"
    android:padding="10dp">

    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="35dp"
        android:src="@drawable/nav_icon" />

    <TextView
        android:id="@+id/objectId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/loginSuccess"
        android:textColor="@color/color_White"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/loginSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_layout"
        android:textColor="@color/color_White"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="5sp"
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="image_btn_ic_edit"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:layout_margin="5sp"
            android:id="@+id/btn_aboutme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="image_btn_ic_aboutme"
            android:src="@drawable/ic_aboutme" />

        <ImageView
            android:layout_margin="5sp"
            android:id="@+id/btn_note_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="image_btn_ic_notes"
            android:src="@drawable/ic_notes" />

        <ImageView
            android:layout_margin="5sp"
            android:id="@+id/btn_exit_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="image_btn_ic_exit_app"
            android:src="@drawable/ic_exit_app" />
    </LinearLayout>


</RelativeLayout>